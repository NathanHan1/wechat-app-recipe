.listWrapper{
    width: 750rpx;
}
.listWrapper .itemWrapper{
    width: 600rpx;
    height: 700rpx;
    margin: 20px auto;
    border-radius: 5px;
    background: #fff;
    box-shadow: 5px 5px 5px #bbb;
}

.listWrapper .itemWrapper .itemTitle,.itemImtro{
    text-align: center;
    display: block;
}

.listWrapper .itemWrapper .itemTitle{
    margin-bottom: 10px;
}

.listWrapper .itemWrapper .itemImtro{
    font-size: 16px;
    color: #666;
    height: 80rpx;
    overflow: hidden;
    line-height: 20px;
    box-sizing: border-box;
    padding: 0 8px;
}

.listWrapper .itemWrapper image{
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    width: 600rpx;
    height: 500rpx;
}