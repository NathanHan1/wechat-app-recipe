/**index.wxss**/
.index {
    position: relative;
    height: 100%;
    width: 750rpx;
    color: #ccc;
    box-sizing: border-box;
}

.index .cookerWrapper {
    width: 100px;
    height: 100px;
    margin: 30px auto;
    border-radius: 50%;
    background: #fff;
    position: relative;
}

.index .cookerWrapper image {
    position: absolute;
    top: 5px;
    left: 50%;
    transform: translateX(-52%);
    width: 80px;
    height: 80px;
}

.iptWrapper {
    width: 700rpx;
    margin: 0 auto;
    background: #fff;
    height: 40px;
    border-radius: 7px;
    line-height: 40px;
    position: relative;
}
.iptWrapper input {
    color: #333;
    line-height: 40px;
    height: 40px;
    text-align: center;
}
.iptWrapper .search {
    position: absolute;
    right: 5px;
    top: 5px;
    width: 25px;
    height: 25px;
}

.randomWrapper .random {
    width: 600rpx;
    margin: 50px auto;
    position: relative;
    text-align: center;
    font-size: 20px;
    color: #333;
}
.randomWrapper .random .tip{
    transition: 0.7s cubic-bezier(.8,-0.83,.46,1);
    background: #ddd;
    display: block;
    font-size: 38rpx;
}
.randomWrapper .random .imgrandom {
    position: absolute;
    left: 50%;
    top: 50px;
    margin-left: -75px;
    width: 150px;
    transition: 0.7s cubic-bezier(.8,-0.83,.46,1);
    height: 150px;
}

.randomFoodWrapper {
    width: 400rpx;
    margin: 20px auto;
    background: #fff;
    height: 500rpx;
    border-radius: 10px;
    text-align: center;
    transition: .5s;
    box-shadow: 0 0 10px rgb(129, 128, 128);
    color: #444;
    overflow: hidden;
}


.randomFoodWrapper .imgFood{
    width: 400rpx;
    height: 300rpx;
    border-radius: 10px;
}

.randomFoodWrapper .imgSorry{
    width: 100rpx;
    height: 100rpx;
    margin: 10px 0;
}

.randomFoodWrapper .title{
    display: block;
    font-weight: bold;
    margin-bottom: 10px;
    font-size: 38rpx;
    height: 45rpx;
    overflow: hidden;
    line-height: 38rpx;
    width: 400rpx;
}
.randomFoodWrapper .desc{
    display: block;
    overflow: hidden;
    height: 45px;
    line-height: 25px;
    padding: 0 3px;
    font-size: 30rpx;
}

.btn{
    text-align: center;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -5px;
}